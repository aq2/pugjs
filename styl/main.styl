/// colours
  // general colours
  $pink = #E0B396
  $brown = #731C25
  $green = #4C6425
  $teal = #016AA7
  $powder = #C1E5F6
  $mustard_old = #D5A30B
  $mustard = #BD900A
  // $mustard = #b73950
  $lightMustard = rgba($mustard,0.4)  // #E4D19C
  $lightBrown = rgba($brown,0.9)
  $lightPink = rgba($pink,0.4)
  $white = lightness($mustard, 95)
  $om = #072966

  body
    color white
    background black

  header
    background black

  header h1
    color $white

  nav
    color black
    background $mustard
  
  nav .tab
    color $om

  nav .tab.active
    color black
    background $white

  section
    color black
    background $white


  // layout colours
  $bgcolor = black;  		// body background
  $navbar = $mustard;		// inactive nav bar
  $navactive = white;		// active nav link
  $navhover = $brown;		// tab on hover
  $content = white;		// inside tab color
  $tablehead = $brown;		// color of table furniture
  $tableHeadText = white;	// text color table head
  $tablebg = white;		// table background
  $activeacc = $mustard;	// active accordion!
  $acc = $lightMustard;	// unactive accordion
  $acchover = $brown;		// accordion hover
  $accText = $brown;		// accordion text
  $accTextHover = white;	// accordion text on hover
  $footer = $mustard;		// guess what
  $imgBorder = $brown;		// thin border around images

  // typography
  $navtext = blue;		// navigation text
  $navactive = black;		// active tab text color
  $contenttext = black;	// content text color



//
/// layout
  *
    margin 0
    padding 0
    box-sizing border-box
  
  body
    margin 0 auto
    max-width 1360px
    overflow-y scroll
  
  header
    top 0
    z-index 5
    height 400px
    position sticky
    text-align right
  
  #sprites
    transform-origin top right
    

  header img#hero
    height 400px
    transition 0.5s
    // animation-name opac
    animation-duration 2s
    transform-origin top right
    animation-fill-mode forwards
  
  header h1
    left 0
    top 150px
    z-index 12
    display inline
    position absolute
    animation-duration 2s
    // animation headingDown
    animation-fill-mode forwards

  @keyframes headingDown
    0%
      top -50px
    100%
      top 200px

  @keyframes headingUp
    0%
      top 200px
    100%
      top 100px

  nav
    top 210px
    z-index 5
    position sticky
    animation-duration 3s
    // animation-name opac
    animation-fill-mode forwards

  main
    z-index 1
    margin 0 auto
    position relative
    // animation-name opac
    animation-duration 3s
    animation-fill-mode forwards

  @keyframes opac
    0% 
      opacity 0
    100%
      opacity 1

  section
    opacity 0
    display none
    padding 1rem 2rem
    transition opacity 2s
    justify-content space-between
    &.active
      animation-name opac
      display inline-block
      animation-duration 1s
      animation-fill-mode forwards
  
  aside
    display flex
    margin-bottom 1rem

  .half
    width 48%

  .spacer
    min-width 3rem

  .pic
    text-align right

  .pic img
    width 200px
  
  .pic a img
    height 45px
    width 45px

  .right
    right 0
    margin-right -20px
    position absolute

  
  button
    color $om
    margin 1rem
    font-size 1.5rem
    padding 1rem 2rem
    background $mustard
    border 2px solid $brown
  
 
//
/// nav tabs

  nav
    display flex
    flex-wrap wrap
    list-style-type none
    justify-content space-between

  nav .tab
    flex-grow 1
    padding 1rem
    cursor pointer
    text-align center
    border 2px solid orange

//    
/// typography

  body
    font-family 'Mulish', sans-serif
  
  h1, h2, h3, .tab
    font-family 'Philosopher', sans-serif

  h1
    font-size 4rem
  
  h2
    width 100%
    font-size 2.5rem
    margin-bottom 0.5rem

  h3
    font-size 1.5rem

  nav .tab
    font-size 2.5rem
    // font-weight bold

  p, li
    line-height 1.3
    font-size 1.5rem
    margin-bottom 0.75rem

  li
    margin-bottom 0

  ul
    margin-left 15rem
    margin-top -2.65rem
    display inline-block

  th
    font-size 1.5rem

  td
    font-size 1.33rem

  a
    text-decoration none

//
/// textimonial
  blockquote
    width 80%
    position relative
    border-radius 1rem
    padding 0.25rem 1rem
    margin 1rem auto 1.5rem auto
    background alpha($mustard, 0.5)
    border-left 15px solid $mustard

  span.quote
    left 1rem
    top -0.5rem
    font-size 7rem
    position absolute
    font-family sans-serif

  .testimonial
    margin-top 3rem
    font-size 1.5rem
    font-style italic
    
  .punter
    text-align right
    font-size 1.25rem
    margin-bottom 1rem

//
/// tables
  table
    border-collapse collapse
    border 2px solid $tablehead
    border-spacing 0
    border-bottom 18px solid $tablehead
    background $tablebg
    width 85%
    margin 0 auto 1em auto
    font-size 1.25rem

  th, td
    padding 0.5em 1em
    color $contenttext
    border-collapse collapse
    border 1px solid $tablehead

  th
    color $tableHeadText
    background $tablehead
    &.last
      border-right: none