/// colours
  // general colours
  $pink = #E0B396
  $brown = #731C25
  $green = #4C6425
  $teal = #016AA7
  $powder = #C1E5F6
  $mustard_old = #D5A30B
  $mustard = #BD900A
  // $mustard = #b73950
  $lightMustard = rgba($mustard,0.4)  // #E4D19C
  $lightBrown = rgba($brown,0.9)
  $lightPink = rgba($pink,0.4)


  body
    color white
    background black

  header
    background black

  header h1
    color white

  nav
    color black
    background $mustard
  
  nav li
    // background 

  nav li.active
    color black
    background white

  section
    color black
    background white
    // background lightness($mustard, 98%)


  // layout colours
  $bgcolor = black;  		// body background
  $navbar = $mustard;		// inactive nav bar
  $navactive = white;		// active nav link
  $navhover = $brown;		// tab on hover
  $content = white;		// inside tab color
  $tablehead = $brown;		// color of table furniture
  $tableHeadText = white;	// text color table head
  $tablebg = white;		// table background
  $activeacc = $mustard;	// active accordion!
  $acc = $lightMustard;	// unactive accordion
  $acchover = $brown;		// accordion hover
  $accText = $brown;		// accordion text
  $accTextHover = white;	// accordion text on hover
  $footer = $mustard;		// guess what
  $imgBorder = $brown;		// thin border around images

  // typography
  $navtext = blue;		// navigation text
  $navactive = black;		// active tab text color
  $contenttext = black;	// content text color




/// layout
  *
    margin 0
    padding 0
    box-sizing border-box
  
  body
    max-width 1360px
    margin 0 auto

  header
    position sticky
    top 0
    border 4px solid blue
    // display inline-block
    // background lightblue
    text-align right


  // header article
  //   border 2px solid white
  //   width 100%
  //   // position absolute
  //   // position relative

  // #strootch
  //   text-align right
  //   border 1px dashed orange
  //   height auto
  //   // display inline-block

  header img#hero
    border 2px solid green
    // position absolute
    // top -100px
    // right 100%
    // left 50%
    // left 15%  // todo - why??
    text-align right
    z-index 0
    transition 0.5s
    height 400px
    // float right
    transform-origin top right
    animation-name opac
    animation-duration 2s
    animation-fill-mode forwards

  header img#om
    // border 2px solid green
    z-index 1
    position relative
    top -326px
    // top 100%
    // left -75%
    // right 75%
    // top -200px

  header h1
    position absolute
    top 150px
    left 0
    // border 2px solid green
    z-index 12
    display inline
    animation heading
    animation-duration 3s
    animation-fill-mode forwards

  @keyframes heading
    0%
      top -50px
    100%
      top 200px


  nav
    // position relative
    // top 200px
    position sticky
    top 245px
    animation-name opac
    animation-duration 3s
    animation-fill-mode forwards


  main
    margin 0 auto
    position relative
    z-index -99
    // opacity 0
    animation-name opac
    animation-duration 3s
    animation-fill-mode forwards

  @keyframes opac
    0% 
      opacity 0
    100%
      opacity 1

  section
    display none
    flex-wrap wrap
    padding 1rem 1rem
    justify-content space-between
    &.active
      display flex

  section > div
    // flex-grow 1
    // width 48%
    border 2px solid red
    // margin 0.5rem 1rem
    // padding 0rem 1rem

  section .right
    text-align left
    border 2px solid blue

  h2
    width 100%
    // margin 0.5rem 1rem

//
/// nav tabs

  nav ul
    display flex
    list-style-type none
    justify-content space-between
    flex-wrap wrap

  nav li
    padding 1rem
    cursor pointer
    border 2px solid orange
    flex-grow 1
    text-align center
    
/// typography

  body
    font-family 'Mulish', sans-serif
  
  h1, h2, h3, nav li
    font-family 'Philosopher', sans-serif

  h1
    font-size 4rem
  
  h2
    font-size 2rem

  h3
    font-size 1.5rem

  nav li
    font-size 2.5rem
    // font-weight bold

  p
    font-size 1.5rem

